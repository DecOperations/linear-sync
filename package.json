{
  "name": "linear-md",
  "displayName": "Linear Markdown",
  "description": "A simple plugin to sync linear issues and docs to markdown files.",
  "version": "0.0.4",
  "engines": {
    "vscode": "^1.81.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "linear",
    "markdown",
    "sync",
    "issue tracking",
    "documentation"
  ],
  "icon": "media/linear.png",
  "activationEvents": [
    "onLanguage:markdown"
  ],
  "main": "./out/extension.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Tr3ffel/linear-md.git"
  },
  "publisher": "Tr3ffel",
  "contributes": {
    "configuration": {
      "title": "Linear Markdown",
      "properties": {
        "linear-md.enableCodeLens": {
          "type": "boolean",
          "default": true,
          "description": "Enable or disable CodeLens for Linear Markdown sync commands"
        },
        "linear-md.filenameFormat": {
          "type": "string",
          "default": "${title}.md",
          "description": "Format for markdown filenames (include .md extension). Available variables: ${title}, ${id} (Linear ticket ID like ABC-123), ${type}, ${date}"
        },
        "linear-md.dateFormat": {
          "type": "string",
          "enum": [
            "ISO",
            "Short",
            "YMD",
            "DMY",
            "MDY"
          ],
          "default": "YMD",
          "description": "Date format to use in filename when using ${date} (ISO: 2023-04-28, Short: 230428, YMD: 20230428, DMY: 28042023, MDY: 04282023)"
        },
        "linear-md.createDirectory": {
          "type": "boolean",
          "default": false,
          "description": "Create directory for each issue/document based on status or team"
        },
        "linear-md.directoryFormat": {
          "type": "string",
          "enum": [
            "team",
            "status",
            "none"
          ],
          "default": "none",
          "description": "Directory structure to use when createDirectory is true"
        },
        "linear-md.skipFrontmatter": {
          "type": "boolean",
          "default": false,
          "description": "Skip generating frontmatter in markdown files (not recommended)"
        },
        "linear-md.customFrontmatterFields": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "Custom fields to include in frontmatter (e.g., priority, assignee)"
        }
      }
    },
    "commands": [
      {
        "command": "linear-md.input-linear-api-key",
        "title": "Input Linear Key"
      },
      {
        "command": "linear-md.delete-linear-api-key",
        "title": "Delete Linear API Key"
      },
      {
        "command": "linear-md.sync-up",
        "title": "Sync Up to Linear"
      },
      {
        "command": "linear-md.sync-down",
        "title": "Sync Down from Linear"
      },
      {
        "command": "linear-md.open-settings",
        "title": "Open Linear Markdown Settings"
      },
      {
        "command": "linear-md.open-visual-settings",
        "title": "Open Linear Markdown Visual Settings Editor"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/node": "20.2.5",
    "@types/js-yaml": "^4.0.9",
    "@types/vscode": "^1.81.0",
    "@typescript-eslint/eslint-plugin": "^5.59.8",
    "@typescript-eslint/parser": "^5.59.8",
    "eslint": "^8.41.0",
    "typescript": "^5.1.3"
  },
  "dependencies": {
    "@linear/sdk": "^37.0.0",
    "js-yaml": "^4.1.0"
  }
}
